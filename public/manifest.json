{
  "manifest_version": 3,
  "name": "GPTracker",
  "version": "0.0.1",
  "description": "Track how often you use ChatGPT and for what.",
  "icons": {
    "32": "chatgpt.png"
  },
  "action": {
    "default_popup": "./index.html",
    "default_icon": {
      "32": "chatgpt.png"
    }
  },
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["https://chatgpt.com/*"],
      "js": ["content.js"],
      "run_at": "document_start"
    }
  ],
  "permissions": [
    "storage",
    "scripting",
    "activeTab",
    "tabs",
    "identity",
    "alarms"
  ],
  "host_permissions": ["http://*/*", "https://*/*"]
}
